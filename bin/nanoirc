#!/usr/bin/env node

var fs = require("fs"),
    nanoirc = require("../lib/nanoirc");

var home = process.env.HOME || process.env.USERPROFILE,
    config =  home + "/.nanoirc.json";

fs.readFile(config, function(err, data) {
    var options = JSON.parse(data || "{}");

    nanoirc.start(options);
});
